/** Inclue links to files and folders in hierarchy
 *
 * Search extension is recognized from search_extensions variable
 */
function includeFileTreeLinks(){
	new ko.extensions.vilbur.markdown.MarkdownLinker()
			.heading('Import file tree', '#')
			//.matchDirName() // include only files which pranet folder is same as filename E.G.: '\Foo\foo.ms'
			.link()			
			.html()					//.html()
			//.mask('md')
			//.mask('.*\.ahk$')
			//.indentation() // Allow indentation
			//.maxLevel( 0 )
			//.maxLevel(  ) // Max depth to search in hierarchy null|integer INIT:null DEFAULT:1
			.show('name') // display text by "name|dir|path" INIT:name
			//.show('path')
			//.update()
			.tree()
			.include();
}
 
/** Inclue links to files and folders in hierarchy
 *
 * Search extension is recognized from search_extensions variable
 */
function linksToAhkFilesWithoutTree(){
	new ko.extensions.vilbur.markdown.MarkdownLinker()
			.heading('Links to ahk files without tree')
			.link()			
			.extension('ahk')
			.indentation() // Allow indentation
			.maxLevel( 4 )
			//.filter('dir')  // "null|file|dir" > Show files, dirs or both if null 
			//.show('dir') // display text by "name|dir|path" DEFAULT:name
			//.tree()
			.include();
}

 
/** Inclue links to files and folders in hierarchy
 *
 * Search extension is recognized from search_extensions variable
 */
function dirsWithReadmeFile(){
	new ko.extensions.vilbur.markdown.MarkdownLinker()
			.heading('Dirs with readme file')
			.link()			
			.extension('md')
			.maxLevel( 4 )
			.filter('dir')  // "null|file|dir" > Show files, dirs or both if null 
			.show('dir') // display only directories
			.include();
}

/** 
 */
function showImage(){
	new ko.extensions.vilbur.markdown.MarkdownLinker()
			.heading('Show Image')
			.image() // Interprets link to image as image
			.extension('ico')
			.filter('file') // display only files
			.link(false)			
			.include();
}

/** 
 */
function showImageWithLink(){
	new ko.extensions.vilbur.markdown.MarkdownLinker()
			.heading('Link And Show Images')
			.image() // Interprets link to image as image
			.extension('png')
			.filter('file') // display only files
			.include();
}

/** 
 */
function importCodeBlock(){
	new ko.extensions.vilbur.markdown.MarkdownLinker()
			//.heading('LinkTo Code Blocks ( compiled with MarkdownFormatter )')
			.heading('LinkTo Code Blocks [Compiled with MarkdownFormatter]( https://github.com/vilbur/KOMODO-AppData/tree/master/tools/Scripts/Markdown/markdownFormatter )\n')
			.codeBlock() // Interprets link to image as image
			.extension('js')
			.filter('file') // display only files
			.include();
}



